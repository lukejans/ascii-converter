// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
    {
        "label": "Launch CLI (no args)",
        "adapter": "JavaScript",
        "type": "node",
        "request": "launch",
        "program": "./dist/main.js",
        "args": ["-i", "assets/joystick.mp4"],
        "skipFiles": ["<node_internals>/**"],
        "build": {
            "command": "pnpm exec",
            "args": ["tsc"]
        },
        "outFiles": ["${ZED_WORKTREE_ROOT}/**/*.js"]
    },
    {
        "label": "Launch CLI (args: P)",
        "adapter": "JavaScript",
        "type": "node",
        "request": "launch",
        "program": "./dist/main.js",
        "args": ["-i", "assets/joystick.mp4", "-P"],
        "skipFiles": ["<node_internals>/**"],
        "build": {
            "command": "pnpm exec",
            "args": ["tsc"]
        },
        "outFiles": ["${ZED_WORKTREE_ROOT}/**/*.js"]
    }
]
